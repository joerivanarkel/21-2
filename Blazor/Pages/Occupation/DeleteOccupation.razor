@page "/deleteoccupation/{id}"


<PageTitle>Delete Occupation</PageTitle>

@using Blazor.Data
@using Data.Models
@inject IOccupationServiceUI OccupationServiceUI
@inject NavigationManager navigationManager

<h1>Are you sure</h1>
<RadzenButton Click=@(() => Delete()) Text="Confirm"  ButtonStyle="ButtonStyle.Danger"/>
<RadzenButton Click=@(() => GoBack()) Text="Cancel"  ButtonStyle="ButtonStyle.Primary"/>

@code
{
    [Parameter]
    public string id { get; set; }

    private async void Delete()
    {
        var parsedId = int.Parse(id);
        await OccupationServiceUI.DeleteAsync(parsedId);
        GoBack();
    }

    private void GoBack()
    {
        navigationManager.NavigateTo("/occupation");
    }
}
